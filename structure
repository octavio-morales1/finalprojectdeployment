│   │   ├── /api
│   │   │   ├── auth
│   │   │   │   ├── login.ts # API route for login
│   │   │   │   └── signup.ts# API route for signup
│   │   │   └── graphql.ts   # GraphQL server API
│   │   ├── index.tsx        # Home page
│   │   └── ...              # Other pages
│
│   ├── /lib
│   │   ├── mongodb.ts       # MongoDB connection logic
│   │   ├── redis.ts         # Redis connection logic
│   │   └── graphqlClient.ts # Apollo GraphQL client
│
│   ├── /graphql
│   │   ├── schema.ts        # GraphQL schema
│   │   └── resolvers.ts     # GraphQL resolvers
│
│   ├── /types
│   │   ├── user.ts          # TypeScript interface for user
│
│   ├── /styles
│   │   ├── globals.css      # Global styles
│   │   └── Auth.module.css   # Scoped styles for auth pages
│
├── .env.local               # Environment variables
